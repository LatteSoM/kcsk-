<UserControl x:Class="CustomControlLib.GraduceBtn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomControlLib"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="226"
             Background="#3D95B9"
             Opacity="0.5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="1" Text="Цельсии"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Foreground="#ffffff"
                   FontSize="15" FontFamily="fonts/#Jura Regular"/>
        <RadioButton Grid.Column="0" VerticalAlignment="Center"
                  HorizontalAlignment="Center" 
                  Background="#ffffff" Foreground="#ffffff"
                  BorderThickness="4"/>
    </Grid>
</UserControl>
